<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Task Manager - Mission 08</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .content {
            flex: 1;
        }

        .navbar-brand {
            font-size: 1.8rem;
            font-weight: bold;
            color: white !important;
        }

        .navbar {
            background: linear-gradient(135deg, #6a11cb, #2575fc);
        }

        .hero-section {
            background: #f8f9fa;
            padding: 30px 0;
            text-align: center;
        }

        .hero-title {
            font-size: 2rem;
            font-weight: 700;
            color: #333;
        }

        .hero-subtitle {
            font-size: 1.2rem;
            color: #666;
        }

        .footer {
            background-color: #343a40;
            color: white;
            text-align: center;
            padding: 10px 0;
            margin-top: 30px;
        }
    </style>
</head>
<body>
    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">📋 Task Manager</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">🏠 Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Task" asp-action="Index">📊 View Tasks</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Task" asp-action="Add">➕ Add Task</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Hero Section (Optional) -->
    <section class="hero-section">
        <div class="container text-center">
            <h1 class="hero-title">Welcome to Your Task Manager</h1>
            <p class="hero-subtitle">Stay organized and prioritize your tasks efficiently</p>
        </div>
    </section>

    <!-- Main Content Section -->
    <div class="container mt-4 content">
        <div class="row">
            <div class="col-md-12">
                @RenderBody()
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <p class="mb-0">© 2025 Mission 08 Team. All Rights Reserved.</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
